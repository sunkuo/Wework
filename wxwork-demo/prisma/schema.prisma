generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Session {
  uuid       String   @id @db.VarChar(255)
  vid        String   @default("") @db.VarChar(255)
  is_login   Int      @default(0) // 0 or 1
  qrcode     String?  @db.Text
  qrcode_key String   @default("") @db.VarChar(255)
  last_event String   @default("") @db.VarChar(255)
  last_error String?  @db.Text
  updated_at DateTime @default(now()) @updatedAt

  events     Event[]

  @@map("sessions")
}

model Event {
  id           Int      @id @default(autoincrement())
  session_uuid String   @db.VarChar(255)
  stage        String   @default("") @db.VarChar(255)
  event_type   String   @default("") @db.VarChar(255)
  payload      Json?
  created_at   DateTime @default(now())

  session      Session  @relation(fields: [session_uuid], references: [uuid])

  @@map("events")
}
